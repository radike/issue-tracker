@model IssueTracker.ViewModels.CommentViewModel

@{
    ViewBag.Title = SharedStrings.FormDelete;
}

<h2>@ViewBag.Title</h2>

<h3>@SharedStrings.DeleteMessageGeneric</h3>
<div>
    <h4>@CommentStrings.EntityName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Issue.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Model.Text))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Posted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Posted)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@SharedStrings.FormDelete" class="btn btn-danger" /> |
            @Html.ActionLink(IssueStrings.BackToIssue, "Details", "Issues", new { id = ViewBag.IssueCode }, null)
        </div>
    }
</div>
